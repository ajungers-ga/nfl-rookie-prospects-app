<%- include("../partials/header") %>

<h2>Add a New Rookie Prospect</h2>

<form action="/rookies" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= rookie.name || '' %>">

  <label for="position">Position:</label>
  <select name="position" id="position">
    <option value="QB" <%= rookie.position === 'QB' ? 'selected' : '' %>>QB</option>
    <option value="RB" <%= rookie.position === 'RB' ? 'selected' : '' %>>RB</option>
    <option value="WR" <%= rookie.position === 'WR' ? 'selected' : '' %>>WR</option>
    <option value="TE" <%= rookie.position === 'TE' ? 'selected' : '' %>>TE</option>
  </select>

  <label for="college">College:</label>
  <input type="text" name="college" id="college" value="<%= rookie.college || '' %>">

  <label for="rank">Prospect Rank:</label>
  <input type="number" step="0.1" name="rank" id="rank" value="<%= rookie.rank || '' %>">

  <label for="projectedDraftPosition">Projected Draft Position:</label>
  <input type="text" name="projectedDraftPosition" id="projectedDraftPosition" value="<%= rookie.projectedDraftPosition || '' %>">

  <button type="submit">Add Rookie</button>
</form>
